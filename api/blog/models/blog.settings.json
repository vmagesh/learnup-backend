{
  "connection": "default",
  "collectionName": "blogs",
  "info": {
    "name": "blog"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "author": {
      "type": "string",
      "required": true
    },
    "tag": {
      "type": "string"
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    }
  }
}
